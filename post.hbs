{{!< default}}

{{#post}}

    {{#if image}}
        <div id="feature_image" class="horz show">
            <div class="inner" style="background-image: url('{{image}}')">
                <img src="{{image}}">
            </div>
        </div>
    {{/if}}

    <article role="main" class="{{#if image}}image{{/if}}">
        <header>
            <a href="{{@blog.url}}" id="home_link" class="fa fa-home"></a>
            <div class="meta"><time datetime="{{date format='YYYY-MM-DD'}}"><a href="{{url}}">{{date format="YYYY年MM月DD日"}}</a></time><span class="count" id="js-reading-time"></span></div>
            <h1>{{title}}</h1>
        </header>

        <div class="text" id="js-post-content">
            {{content}}
        </div>

        <footer class="post-tags">
            <span><i class="fa fa-tags fa-lg"></i></span>
            <span>{{tags}}</span>
        </footer>

        <menu>
            <a href="" id="btn_share" class="btn" title="分享">
                <span aria-hidden="true" class="fa fa-share-square"></span>
                <strong>分享</strong>
            </a>

            <!--<a href="" id="btn_comment" class="btn" title="评论">
                <span aria-hidden="true" class="fa fa-comments-o"></span>
                <strong>评论</strong>
            </a>-->
        </menu>

    </article>

    <div id="share_modal">
        <div class="wrap">
            <div class="inner">
                <header>
                    分享
                    <a href="" class="close" title="Close">&times;</a>
                </header>

                <div class="roon-share-links">
