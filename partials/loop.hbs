{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}}">

    {{#if image}}
        <div class="image-holder show">
        <a href="{{url}}" class="inner" style="background-image: url('{{image}}');">
         <img src="{{image}}">
        </a>
      </div>
    {{/if}}

    <div class="meta">
        <time datetime="{{date format='YYYY-MM-DD'}}"><a href="{{url}}">{{date format="YYYY年MM月DD日"}}</a></time>
    </div>

    <header>
        <h1><a href="{{url}}">{{title}}</a></h1>
    </header>

    <section class="text">
        <p>{{excerpt characters="160"}}</p>
        <a href="{{url}}" class="readmore">继续阅读</a>
    </section>

    <footer class="post-tags post-list">
        <span><i class="fa fa-tags fa-lg"></i></span>
        <span>{{tags}}</span>
    </footer>
</article>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}
